<table class="table posts">
  <tbody>
<%= for post <- @posts do %>
    <tr id="post_<%= post.id %>">
      <td>
      <h1 class="preview-title"><%= post.title %></h1>
      <!--<p>Created by: <%#= post.user.name %></p>-->
      <p class="preview-text"><%= truncate post.body, length: 400, separator: " " %></p>
       <br><br>
       <span><%= link "	ðŸ“– ", to: post_path(@conn, :show, post), class: "btn btn-default btn-md btn-read-post unicode-lg" %></span>
        <span><%= link "âœŽ", to: post_path(@conn, :edit, post), class: "btn btn-default btn-md btn-edit-post unicode-lg "    %>
        <span><%= link " delete ", to: post_path(@conn, :delete, post), method: :delete, data: [confirm: "Delete...Are you sure?"], class: "btn btn-danger btn-md btn-delete-post unicode-lg" %></span>
        <span class="upvote-count", data-current-count="<%= post.upvotes_count.count %>">
          <%= link " #{post.upvotes_count.count} â‡§ ", to: post_upvote_path(@conn, :create, post), "ujs-method": "post", "ujs-remote": true, class: upvoted_class("not_upvoted", @upvotes[post.id]) <> "btn btn-default btn-md btn-edit-post unicode-lg upvote-btn upvote-add-btn upvote-font" %>
          <%= link " #{post.upvotes_count.count} â‡§", to: post_upvote_path(@conn, :create, post), "ujs-method": "delete", "ujs-remote": true, class: upvoted_class("upvoted", @upvotes[post.id]) <> "btn btn-default btn-md btn-edit-post unicode-lg upvote-btn upvote-delete-btn upvote-font" %>
        </span>
        <!--<span><%#= link "Fork", to: post_path(@conn, :fork, post), class: "btn btn-default btn-xs" %></span>-->
        <span><%= link " #{@forks_count[root_path(post.path)]} ð ", to: post_path(@conn, :fork, post), class: "btn btn-default btn-md unicode-lg" %> </span>
     <br><br><br>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

